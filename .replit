modules = ["nodejs-20", "bash", "postgresql-16"]

[agent]
stack = "AGENT_STACK"
integrations = ["agentstack-trigger-telegram:1.0.0", "javascript_database:1.0.0"]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jq"]

[deployment]
build = ["bash", "scripts/build.sh"]
run = ["bash", "-c", "npm run dev & npx inngest-cli dev -u http://localhost:3001/api/inngest --host 127.0.0.1 --port 3000 & wait"]
deploymentTarget = "vm"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8289

[[ports]]
localPort = 35117
externalPort = 3001

[[ports]]
localPort = 37307
externalPort = 3003

[[ports]]
localPort = 50052
externalPort = 3002

[[ports]]
localPort = 50053
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mastra Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Inngest Server"

[[workflows.workflow]]
name = "Mastra Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Inngest Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx inngest-cli dev -u http://localhost:5000/api/inngest --host 0.0.0.0 --port 3000"
waitForPort = 3000
