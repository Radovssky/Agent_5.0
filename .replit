modules = ["nodejs-20", "bash", "postgresql-16"]

[agent]
stack = "AGENT_STACK"
integrations = ["agentstack-trigger-telegram:1.0.0", "javascript_database:1.0.0"]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jq"]

[deployment]
build = ["npm", "run", "build"]
run = ["npm", "run", "dev"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 8289

[[ports]]
localPort = 35117
externalPort = 3001

[[ports]]
localPort = 50052
externalPort = 3003

[[ports]]
localPort = 50053
externalPort = 3002

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Inngest Server"

[[workflows.workflow]]
name = "Telegram Bot Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Inngest Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/inngest.sh"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"
