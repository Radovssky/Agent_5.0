modules = ["nodejs-20", "bash"]

[agent]
stack = "AGENT_STACK"
integrations = ["agentstack-trigger-telegram:1.0.0", "javascript_database:1.0.0"]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jq"]

[deployment]
build = ["bash", "scripts/build.sh"]
run = ["bash", "-c", "npm run dev & npx inngest-cli dev -u http://localhost:3001/api/inngest --host 127.0.0.1 --port 3000 & wait"]
deploymentTarget = "vm"

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 3001
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8289

[[ports]]
localPort = 50052
externalPort = 3002

[[ports]]
localPort = 50053
externalPort = 3001

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start inngest server"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 3001

[[workflows.workflow]]
name = "Start inngest server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx inngest-cli dev -u http://localhost:3001/api/inngest --host 127.0.0.1 --port 3000"
waitForPort = 3000
